<h1><%= @list.name %></h1>

<% @list.bookmarks.each do |bookmark| %>
  <div class="card-product">
    <%= image_tag(bookmark.movie.poster_url) %>
    <div class="card-product-infos">
      <%= bookmark.movie.title %> <strong><%= bookmark.movie.rating %></strong>
      <br>
      <%= bookmark.comment %>
      <%= link_to "❌", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Remove #{bookmark.movie.title}?" } %>
    </div>
  </div>
<% end %>

<br>
  <%= link_to "Add Bookmarks", new_list_bookmark_path(params[:id]) %>
<br>
  <%= link_to "Back to all lists", lists_path %>
